<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_interscroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.interscroller.InterscrollerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/load_interscroller"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/load_interscroller"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_interscroller"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/show_interscroller"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>